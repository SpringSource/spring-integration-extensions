			<xsd:enumeration value="NA_10X14_ENVELOPE"/>
			<xsd:enumeration value="NA_10X15_ENVELOPE"/>
			<xsd:enumeration value="NA_5X7"/>
			<xsd:enumeration value="NA_8X10"/>
		</xsd:restriction>
	</xsd:simpleType>
</xsd:schema>
